<div class="row">
	<div class="col-md-6 col-md-offset-3 whiteContent">
		<div class="page-header">
			<h2>League of Legends teams</h2>
		</div>
		<table class="table table-condensed">
			<tr>
				<th>Team's name</th>
				<th>type</th>
				<th>Action</th>
			</tr>
			<% @teams.each do |team| %>
			<tr>
				<td><%= team.name %></td>
				<td><%= team.team_type.name %></td>
				<td>
					<%= link_to 'Edit', edit_app_user_team_path(@user.id, team.id), :class => 'btn btn-info btn-xs' %>
					<%= link_to 'Unlink', app_user_team_path(@user, team.id), method: :delete, :class => 'btn btn-danger btn-xs' %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= link_to "Create a duo team", new_app_user_team_path(@user.id), :class => 'btn btn-info'  %>
	</div>
</div>