<h4><%= summoner.name %>'s team</h4>
<div class="max-350">
	<div class="scroll">
		<% if summoner.get_teams.count > 0 %>
		<% summoner.get_teams.each do |team| %>
		<% if team.team_type.key == "RANKED_TEAM_5x5" %>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row" style="text-align:center;">
					<div class="col-md-12">
						<h5>
							<%= team.name %>
							<%= render 'show_league_icones', :itemToLeague=>team, :size=>"32x32" %>
						</h5>
					</div>
				</div>		
			</div>
		</div>
		<% elsif team.team_type.key = "RANKED_SOLO_5x5"%>
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="row" style="text-align:center;">
					<div class="col-md-5">
						<h5>
							<%= team.team_compositions.first.summoner.name %>
							<%= render 'show_league_icones', :itemToLeague=>team.team_compositions.first.summoner, :size=>"32x32" %>
						</h5>
					</div>
					<div class="col-md-2" style="padding-top:10px;">
						<h5>&</h5>
					</div>
					<div class="col-md-5">
						<h5>
							<%= team.team_compositions.last.summoner.name %>
							<%= render 'show_league_icones', :itemToLeague=>team.team_compositions.last.summoner, :size=>"32x32" %>
						</h5>
					</div>
				</div>
			</div>
		</div>
		<% end %>
		<% end %>
		<% else %>
		<div class="well">
			<h4><%= summoner.name %> <small>has no registered teams</small></h4>
		</div>
		<% end %>
	</div>
</div>