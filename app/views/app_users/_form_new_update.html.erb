<div class="form-container">
	<h1>Register</h1>
	<% if @user.errors.any? %>
		<div id="error_explanation" class="text-danger">
			<h5><%= pluralize(@user.errors.count, "error") %> canceled your registration:</h5>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
		<div class="form-group">
			<%= f.text_field :username, class: "form-control" , :placeholder => "Username" %>
		</div>
		<div class="form-group">
			<%= f.email_field :email, class: "form-control", :placeholder => "Email"  %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, class: "form-control", :placeholder => "Password"  %>
		</div>
		<div class="form-group">
			<%= f.password_field :password_confirmation, class: "form-control", :placeholder => "Password confirmation"  %>
		</div>
		<div class="form-group">
			<%= f.submit "Yes please, let me come in !", :class => 'btn btn-info' %> 
		</div>
	<% end %>
</div>