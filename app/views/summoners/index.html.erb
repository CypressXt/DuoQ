<div class="row">
	<div class="col-md-10 col-md-offset-1 whiteContent">
		<div class="page-header">
			<h2>Linked League of Legends account</h2>
		</div>
		<table class="table table-condensed">
			<tr>
				<th>Summoner's name</th>
				<th>Summoner's id</th>
				<th>Action</th>
			</tr>
			<% @summoners.each do |summoner| %>
			<tr>
				<td><%= summoner.name %></td>
				<td><%= summoner.id %></td>
				<td>
					<%= link_to 'unlink', [@user, summoner], method: :delete, :class => 'btn btn-danger btn-xs'   %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= link_to "Link an account", new_app_user_summoner_path(@user.id), :class => 'btn btn-info'  %>
	</div>
</div>